<body>
  <h1>Contador de Vendas - Modo Abas</h1>
  <div class="tabs">
    <button onclick="mostrarAba('fichas')" id="btn_fichas">Fichas</button>
    <button onclick="mostrarAba('lanches')" id="btn_lanches">Lanches</button>
    <button onclick="mostrarAba('bebidas')" id="btn_bebidas">Bebidas</button>
    <button onclick="mostrarAba('doces')" id="btn_doces">Doces</button>
  </div>

  <div class="section" id="aba_fichas">
    <h2>Fichas</h2>
    <input placeholder="Vendedor" id="vendedor_fichas" />
    <div class="counter" id="counter_fichas">0</div>
    <div id="timestamp_fichas">Última venda: --</div>
    <div>
      <button onclick="add('fichas',1)">+1</button>
      <button onclick="add('fichas',5)">+5</button>
      <button onclick="add('fichas',10)">+10</button><br />
      <button onclick="desfazer('fichas')">Desfazer</button>
      <button onclick="zerar('fichas')">Zerar</button>
    </div>
    <canvas id="grafico_fichas" width="400" height="200"></canvas>
  </div>

  <div class="section" id="aba_lanches">
    <h2>Lanches</h2>
    <input placeholder="Vendedor" id="vendedor_lanches" />
    <div class="counter" id="counter_lanches">0</div>
    <div id="timestamp_lanches">Última venda: --</div>
    <div>
      <button onclick="add('lanches',1)">+1</button>
      <button onclick="add('lanches',5)">+5</button>
      <button onclick="add('lanches',10)">+10</button><br />
      <button onclick="desfazer('lanches')">Desfazer</button>
      <button onclick="zerar('lanches')">Zerar</button>
    </div>
    <canvas id="grafico_lanches" width="400" height="200"></canvas>
  </div>

  <div class="section" id="aba_bebidas">
    <h2>Bebidas</h2>
    <input placeholder="Vendedor" id="vendedor_bebidas" />
    <div class="counter" id="counter_bebidas">0</div>
    <div id="timestamp_bebidas">Última venda: --</div>
    <div>
      <button onclick="add('bebidas',1)">+1</button>
      <button onclick="add('bebidas',5)">+5</button>
      <button onclick="add('bebidas',10)">+10</button><br />
      <button onclick="desfazer('bebidas')">Desfazer</button>
