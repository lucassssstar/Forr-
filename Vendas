    }
    .tabs button {
      padding: 10px 20px;
      margin: 5px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 6px;
      background-color: #ddd;
    }
    .tabs button.active {
      background-color: #4caf50;
      color: white;
    }
    .section {
      display: none;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      margin: 20px auto;
    }
    .counter {
      font-size: 36px;
      margin: 10px 0;
    }
    input,
    button {
      margin: 5px;
