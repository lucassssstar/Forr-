  </div>

  <div class="section" id="aba_doces">
    <h2>Doces</h2>
    <input placeholder="Vendedor" id="vendedor_doces" />
    <div class="counter" id="counter_doces">0</div>
    <div id="timestamp_doces">Última venda: --</div>
    <div>
      <button onclick="add('doces',1)">+1</button>
      <button onclick="add('doces',5)">+5</button>
      <button onclick="add('doces',10)">+10</button><br />
      <button onclick="desfazer('doces')">Desfazer</button>
      <button onclick="zerar('doces')">Zerar</button>
    </div>
    <canvas id="grafico_doces" width="400" height="200"></canvas>
  </div>

  <script>
    const secoes = ["fichas", "lanches", "bebidas", "doces"];
    const dados = {};

    secoes.forEach(sec => {
      dados[sec] = {
        total: parseInt(localStorage.getItem("total_" + sec)) || 0,
        historico: JSON.parse(localStorage.getItem("historico_" + sec)) || [],
        ultima: localStorage.getItem("ultima_" + sec) || "--"
      };
      atualizar(sec);
    });

    function getHora() {
      return new Date().toLocaleString("pt-BR");
    }

    function atualizar(sec) {
      document.getElementById("counter_" + sec).innerText = dados[sec].total;
      document.getElementById("timestamp_" + sec).innerText = "Última venda: " + dados[sec].ultima;
      localStorage.setItem("total_" + sec, dados[sec].total);
      localStorage.setItem("historico_" + sec, JSON.stringify(dados[sec].historico));
      localStorage.setItem("ultima_" + sec, dados[sec].ultima);
      atualizarGrafico(sec);
    }

    function add(sec, qtd) {
      const vendedor = document.getElementById("vendedor_" + sec).value || "Anônimo";
      const hora = getHora();
      dados[sec].total += qtd;
      dados[sec].ultima = hora;
      dados[sec].historico.push({ qtd, hora, vendedor });
      atualizar(sec);
    }

    function desfazer(sec) {
      const ult = dados[sec].historico.pop();
      if (ult) dados[sec].total -= ult.qtd;
      atualizar(sec);
    }

    function zerar(sec) {
      if (confirm("Zerar " + sec + "?")) {
        dados[sec].total = 0;
        dados[sec].historico = [];
        dados[sec].ultima = "--";
        atualizar(sec);
      }
    }

    function mostrarAba(sec) {
      secoes.forEach(s => {
        document.getElementById("aba_" + s).style.display = "none";
        document.getElementById("btn_" + s).classList.remove("active");
      });
      document.getElementById("aba_" + sec).style.display = "block";
      document.getElementById("btn_" + sec).classList.add("active");
    }

    function atualizarGrafico(sec) {
      const ctx = document.getElementById("grafico_" + sec).getContext("2d");
      const porVendedor = {};
      dados[sec].historico.forEach(i => {
        porVendedor[i.vendedor] = (porVendedor[i.vendedor] || 0) + i.qtd;
      });
      const labels = Object.keys(porVendedor);
      const valores = Object.values(porVendedor);
      if (window["graf_" + sec]) window["graf_" + sec].destroy();
      window["graf_" + sec] = new Chart(ctx, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "Total por vendedor",
              data: valores,
              backgroundColor: "rgba(76, 175, 80, 0.6)",
              borderColor: "rgba(76, 175, 80, 1)",
              borderWidth: 1
            }
          ]
        },
        options: {
          responsive: true,
          scales: {
            y: { beginAtZero: true }
          }
        }
      });
    }

    // Mostrar primeira aba
    mostrarAba("fichas");
  </script>
</body>
